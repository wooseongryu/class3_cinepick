	<select id= "selectQnaList" resultType="Qna">
		SELECT
			q.qnaIdx
			, q.qnaTitle
			, q.qnaContent
			, q.qnaCategory
			, c.qnaCateSubject 
		FROM
			qna q JOIN qnaCate c
			ON q.qnaCategory = c.qnaCateIdx
		ORDER BY qnaIdx
		LIMIT
			#{startRow}
			, #{listLimit}
	</select>
	
	
	<select id= "selectQnaListCount">
		SELECT COUNT(*)
		FROM qna
