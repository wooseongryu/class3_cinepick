	<!-- 공지 사항 목록 조회 -->
	<select id= "selectNoticeList" resultType="Notice">
		SELECT *
		FROM notice
		ORDER BY noticeIdx DESC
		LIMIT
			#{startRow}
			, #{listLimit}
	</select>
	
	
	<select id= "selectNoticeListCount">
		SELECT COUNT(*)
		FROM notice
	</select>
